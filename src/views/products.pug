doctype html
html(lang='en')
  include common/head.pug
  +head("Starter MVP")
  body
    header
      include common/navbar.pug
      +navbar(user)
      html
  body
    // Topbar Start
    .container-fluid.bg-dark
      .row.py-2.px-lg-5
        .col-lg-6.text-center.text-lg-left.mb-2.mb-lg-0
          .d-inline-flex.align-items-center.text-white
            small
              i.fa.fa-phone-alt.mr-2
              | +012 345 6789
            small.px-3 |
            small
              i.fa.fa-envelope.mr-2
              | info@example.com
        .col-lg-6.text-center.text-lg-right
          .d-inline-flex.align-items-center
            a.text-white.px-2(href="")
              i.fab.fa-facebook-f
            a.text-white.px-2(href="")
              i.fab.fa-twitter
            a.text-white.px-2(href="")
              i.fab.fa-linkedin-in
            a.text-white.px-2(href="")
              i.fab.fa-instagram
            a.text-white.pl-2(href="")
              i.fab.fa-youtube
    // Topbar End
    // Header Start
    .jumbotron.jumbotron-fluid.mb-5
      .container.text-center.py-5
        h1.text-primary.mb-4 Productos
        .mx-auto(style="width: 100%; max-width: 600px;")
          .input-group
            .container.text-center
    // Grid Style 1 Start
    .grid-title
      h2 Product Grid Style 1
    .product-grid.grid-1
      each product in products
        .product-item
          .product-single
            .product-img
              img(src="img/product-1.jpg", alt="Product Image")
              .product-status
              form(action="/products/addToCart", method='POST', id=product.name)
                .product-action
                  input(type="text" name='name', value=product.name)
                  input(type="text" name='price', value=product.price)
                  button.btn.btn-primary(type='submit')
                    i.fa.fa-shopping-cart
            .product-content
              .product-title
                h2
                  a(href="") #{product.name}
              .product-price
                h2 $ #{product.price}
                h2
    // Grid Style 1 End



    // Header End
    include common/footer.pug
    +footer()