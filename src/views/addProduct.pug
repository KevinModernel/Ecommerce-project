doctype html
html(lang='en')
  include common/head.pug
  +head("Starter MVP")
  body
    header
      include common/navbar.pug
      +navbar(user)
      html
  body
    // Topbar Start
    .container-fluid.bg-dark
      .row.py-2.px-lg-5
        .col-lg-6.text-center.text-lg-left.mb-2.mb-lg-0
          .d-inline-flex.align-items-center.text-white
            small
              i.fa.fa-phone-alt.mr-2
              | +012 345 6789
            small.px-3 |
            small
              i.fa.fa-envelope.mr-2
              | info@example.com
        .col-lg-6.text-center.text-lg-right
          .d-inline-flex.align-items-center
            a.text-white.px-2(href="")
              i.fab.fa-facebook-f
            a.text-white.px-2(href="")
              i.fab.fa-twitter
            a.text-white.px-2(href="")
              i.fab.fa-linkedin-in
            a.text-white.px-2(href="")
              i.fab.fa-instagram
            a.text-white.pl-2(href="")
              i.fab.fa-youtube
    // Topbar End
    // Header Start
    .jumbotron.jumbotron-fluid.mb-5
      .container.text-center.py-5
        h1.text-primary.mb-4 Agregar productos - Admin
        .mx-auto(style="width: 100%; max-width: 600px;")
          .input-group
            .container.text-center
                form(action='/products/addProduct', method='POST')
                                div.form-group
                                    label.formGroupExampleInput Name:
                                    input(type="text", placeholder="Product name", required=true, name='name', value='').form-control
                                    
                                    label.formGroupExampleInput Category:
                                    input(type="text", placeholder="Product category", required=true, name='category', value='').form-control

                                    label.formGroupExampleInput Description:
                                    input(type="text", placeholder="Product description", required=true, name='description', value='').form-control

                                    label.formGroupExampleInput Price:
                                    input(type="number", placeholder="Product price", required=true, name='price', value='').form-control

                                    label.formGroupExampleInput Quantity:
                                    input(type="number", placeholder="Product Quantity", required=true, name='quantity', value='').form-control

                                    label.formGroupExampleInput Image JPG:
                                    input(type="text", placeholder="Product Image.JPG", required=false, name='image', value='').form-control
                              
                                    button.mt-3.btn.btn-primary(type='submit') Agregar producto

    // Header End
    include common/footer.pug
    +footer()