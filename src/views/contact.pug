    // Contact Start
    .container-fluid.py-5
      .container
        .row
          .col-lg-5.pb-4.pb-lg-0
            .bg-primary.text-dark.text-center.p-4
              h4.m-0
                i.fa.fa-map-marker-alt.text-white.mr-2
                | 123 Street, New York, USA
            iframe(style="width: 100%; height: 470px; style=border:0", src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001156.4288297426!2d-78.01371936852176!3d42.72876761954724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4ccc4bf0f123a5a9%3A0xddcfc6c1de189567!2sNew%20York%2C%20USA!5e0!3m2!1sen!2sbd!4v1603794290143!5m2!1sen!2sbd", frameborder="0", allowfullscreen="", aria-hidden="false", tabindex="0")
          .col-lg-7
            h6.text-primary.text-uppercase.font-weight-bold Contact Us
            h1.mb-4 Contact For Any Queries
            .contact-form.bg-secondary(style="padding: 30px;")
              #success
              form#contactForm(name="sentMessage", novalidate="novalidate")
                .control-group
                  label.formGroupExampleInput Name:
                  input#name.form-control.border-0.p-10(type="text", placeholder="Your Name", required="required", data-validation-required-message="Please enter your name")
                  p.help-block.text-danger
                .control-group
                  label.formGroupExampleInput Email:
                  input#email.form-control.border-0.p-4(type="email", placeholder="Your Email", required="required", data-validation-required-message="Please enter your email")
                  p.help-block.text-danger
                .control-group
                  label.formGroupExampleInput Asunto:
                  input#subject.form-control.border-2.p-4(type="text", placeholder="Subject", required="required", data-validation-required-message="Please enter a subject")
                  p.help-block.text-danger
                .control-group
                  label.formGroupExampleInput Mensaje:
                  textarea#message.form-control.border-2.py-3.px-4(rows="3", placeholder="Message", required="required", data-validation-required-message="Please enter your message")
                  p.help-block.text-danger
                div
                  | !{' '}
                  button#sendMessageButton.btn.btn-primary.py-10.px-4(type="submit")
                    | Send
                    | Message
    // Contact End





